extends layout

block content
	div.container
		form.signup(action="/signup" method="post")
			div.form-group
				label(for='name') Name
				input.form-control(type='name' id='name' name='name' placeholder='Name')
				
			div.form-group
				label(for='email') Email
				input.form-control(type='email' id='email' name='email' placeholder='Email')
				
			div.form-group
				label(for='phone') Phone
				input.form-control(type='tel' id='phone' name='phone' placeholder='Phone')
				
			div.form-group
				label(for='password') Password
				input.form-control(type='password' id='password' name='password' placeholder='Password')
				
			div.form-group
				label(for='confirmPassword') Confirm Password
				input.form-control(type='confirmPassword' id='confirmPassword' name='confirmPassword' placeholder='Confirm Password')
					
			input.btn.btn-default(type="submit" value="Submit")